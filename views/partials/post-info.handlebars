<article class="post">
  <a href="/post/{{id}}"></a>
  <div class="title">
    <a>{{title}}</a>
  </div>
  <div class="meta">
    by
    {{user.username}}
    on
    {{format_date created_at}}
    |
    <a href="/post/{{id}}">{{comments.length}}
      {{format_plural "comment" comments.length}}</a>
  </div>
</article>